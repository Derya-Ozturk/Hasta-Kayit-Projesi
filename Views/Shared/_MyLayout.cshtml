
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>W3.CSS</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    
</head>
<body>
    <script src="~/Scripts/bootstrap.min.js"></script>
    
    <div class="w3-sidebar w3-light-grey w3-bar-block" style="width:15%">
        <h3 class="w3-bar-item">Menü</h3>
        <a href="/Default/Index" class="w3-bar-item w3-button">Kayıt Sayfası</a>
        <a href="/Goruntuleme/GetTables" class="w3-bar-item w3-button">Görüntüle / Sil</a>
        @if (User.IsInRole("deryaozturk")) {
        <a href="/Personel/GetPersonel" class="w3-bar-item w3-button">Personel Listesi / Yetkilendirme</a>
        }
    </div>

    <div style="margin-left:15%">
        <div class="w3-container w3-teal">
            <h1>Online Hasta Kayıt Formu </h1>
        </div>

        <div class="w3-container">
            @RenderBody()
        </div>
    </div>
</body>
</html>

